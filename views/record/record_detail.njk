{% extends "../base.njk" %}

{% block titulo %}result | Ficha{% endblock %}

{% block contenido %}

    <h1>Ficha de expediente</h1>
    <div>
        <p>
            <strong>Name:</strong>
            {{ result.patient.name }}</p>
        <p>
            <strong>Surname:</strong>
            {{ result.patient.surname }}</p>

        <h2>Medical result</h2>
        {% if result.medicalresult %}
            <p>{{ result.medicalresult }}</p>
        {% else %}
            <p>No medical result available.</p>
        {% endif %}
    </div>

    <h2>Appointments</h2>
    {% if result.appointments and result.appointments.length > 0 %}
        <table width="100%">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Physio</th>
                    <th>Diagnosis</th>
                    <th>Treatment</th>
                    <th>Observations</th>
                </tr>
            </thead>
            <tbody>
                {% for appointment in result.appointments %}
                    <tr>
                        <td>{{ appointment.date }}</td>
                        <td>{{ appointment.physio.name }}</td>
                        <td>{{ appointment.diagnosis }}</td>
                        <td>{{ appointment.treatment }}</td>
                        <td>{{ appointment.observations }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No consultations registered.</p>
    {% endif %}

{% endblock %}