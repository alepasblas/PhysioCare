{% extends "base.njk" %}

{% block titulo %}Physio | Ficha{% endblock %}

{% block contenido %}

    <div class="container mt-5">
        <h1>Registrar Nuevo Physio</h1>
        <form action="/physios" method="POST" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="name" class="form-label">Nombre</label>
                <input type="text" id="name" name="name" class="form-control" required="required" minlength="2" maxlength="50">
            </div>

            <div class="mb-3">
                <label for="surname" class="form-label">Apellido</label>
                <input type="text" id="surname" name="surname" class="form-control" required="required" minlength="2" maxlength="50">
            </div>

            <div class="mb-3">
                <label for="specialty" class="form-label">Specialty</label>
                <input type="text" id="specialty" name="specialty" class="form-control" required="required">
            </div>

            <div class="mb-3">
                <label for="licenseNumber" class="form-label">License Number</label>
                <input type="text" id="licenseNumber" name="licenseNumber" class="form-control" pattern="^[a-zA-Z0-9]{8}$">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Imagen</label>
                <input type="file" id="image" name="image" class="form-control" accept="image/*">
            </div>

            <div class="mb-3">
                <label for="login" class="form-label">Login</label>
                <input type="text" id="login" name="login" class="form-control" required="required">
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="text" id="password" name="password" class="form-control" required="required" minlength="7">
            </div>

            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>

{% endblock %}