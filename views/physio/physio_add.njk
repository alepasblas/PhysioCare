{% extends "../base.njk" %}

{% block titulo %}Physio | Ficha{% endblock %}

{% block contenido %}

    <div class="container mt-5">
        <h1>Registrar Nuevo Physio</h1>
        <form action="/physios" method="POST" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="name" class="form-label">Nombre</label>
                {% if errors.name %}
                    <p class="text-danger">{{ errors.name }}</p>
                {% endif %}
                <input type="text" id="name" name="name" class="form-control" required="required">
            </div>

            <div class="mb-3">
                <label for="surname" class="form-label">Apellido</label>
                {% if errors.surname %}
                    <p class="text-danger">{{ errors.surname }}</p>
                {% endif %}
                <input type="text" id="surname" name="surname" class="form-control" required="required">
            </div>

            <div class="mb-3">
                <label for="specialty" class="form-label">Especialidad</label>
                {% if errors.specialty %}
                    <p class="text-danger">{{ errors.specialty }}</p>
                {% endif %}
                <select id="specialty" name="specialty" class="form-control" required="required">
                    <option value="" disabled="disabled" selected="selected">Seleccione una especialidad</option>
                    <option value="Sports">Deportiva</option>
                    <option value="Neurological" >Neurol칩gica</option>
                    <option value="Pediatric" >Pedi치trica</option>
                    <option value="Geriatric" >Geri치trica</option>
                    <option value="Oncological">Oncol칩gica</option>
                </select>          
         </div>

            <div class="mb-3">
                <label for="licenseNumber" class="form-label">License Number</label>
                {% if errors.licenseNumber %}
                    <p class="text-danger">{{ errors.licenseNumber }}</p>
                {% endif %}
                <input type="text" id="licenseNumber" name="licenseNumber" class="form-control" >
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Imagen</label>
                <input type="file" id="image" name="image" class="form-control" accept="image/*">
            </div>

            <div class="mb-3">
                <label for="login" class="form-label">Login</label>
                {% if errors.login %}
                    <p class="text-danger">{{ errors.login }}</p>
                {% endif %}
                <input type="text" id="login" name="login" class="form-control" required="required">
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                {% if errors.password %}
                    <p class="text-danger">{{ errors.password }}</p>
                {% endif %}
                <input type="text" id="password" name="password" class="form-control" required="required" >
            </div>

            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>

{% endblock %}