{% extends "../base.njk" %}

{% block titulo %}Physio | Editar{% endblock %}

{% block contenido %}

    <div class="container mt-5">
        <h1>Editar fisio</h1>
        <form action="/physios/{{result._id}}" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="put" />

            <div class="mb-3">
                <label for="name" class="form-label">Nombre</label>
                {% if errors.name %}
                    <p class="text-danger">{{ errors.name }}</p>
                {% endif %}
                <input type="text" id="name" name="name" class="form-control" required="required" value="{{result.name}}">
            </div>

            <div class="mb-3">
                <label for="surname" class="form-label">Apellido</label>
                {% if errors.surname %}
                    <p class="text-danger">{{ errors.surname }}</p>
                {% endif %}
                <input type="text" id="surname" name="surname" class="form-control" required="required"value="{{result.surname}}">
            </div>

            <div class="mb-3">
                <label for="specialty" class="form-label">Especialidad</label>
                {% if errors.specialty %}
                    <p class="text-danger">{{ errors.specialty }}</p>
                {% endif %}

                <select id="specialty" name="specialty" class="form-control" required="required">
                    <option value="" disabled="disabled" selected="selected">Seleccione una especialidad</option>
                    <option value="Sports">Deportiva</option>
                    <option value="Neurological" >Neurológica</option>
                    <option value="Pediatric" >Pediátrica</option>
                    <option value="Geriatric" >Geriátrica</option>
                    <option value="Oncological">Oncológica</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="licenseNumber" class="form-label">Número de Licencia</label>
                {% if errors.licenseNumber %}
                    <p class="text-danger">{{ errors.licenseNumber }}</p>
                {% endif %}
                <input type="text" id="licenseNumber" name="licenseNumber" class="form-control" required="required" value="{{result.licenseNumber}}">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Imagen</label>
                <input type="file" id="image" name="image" class="form-control" accept="image/*">
            </div>

            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>

{% endblock %}