{% extends "base.njk" %}

{% block titulo %}Patient | Ficha{% endblock %}

{% block contenido %}

    <div class="container mt-5">
        <h1>Registrar Nuevo Paciente</h1>
        <form action="/patients" method="POST" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="name" class="form-label">Nombre</label>
                <input type="text" id="name" name="name" class="form-control" required="required" minlength="2" maxlength="50">
            </div>

            <div class="mb-3">
                <label for="surname" class="form-label">Apellido</label>
                <input type="text" id="surname" name="surname" class="form-control" required="required" minlength="2" maxlength="50">
            </div>

            <div class="mb-3">
                <label for="birthDate" class="form-label">Fecha de Nacimiento</label>
                <input type="date" id="birthDate" name="birthDate" class="form-control" required="required">
            </div>

            <div class="mb-3">
                <label for="address" class="form-label">Dirección</label>
                <input type="text" id="address" name="address" class="form-control" maxlength="100">
            </div>

            <div class="mb-3">
                <label for="insuranceNumber" class="form-label">Número de Seguro</label>
                <input type="text" id="insuranceNumber" name="insuranceNumber" class="form-control" required="required" pattern="[a-zA-Z0-9]{9}">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Imagen</label>
                <input type="file" id="image" name="image" class="form-control" accept="image/*">
            </div>

            <div class="mb-3">
                <label for="login" class="form-label">Login</label>
                <input type="text" id="login" name="login" class="form-control" required="required">
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="text" id="password" name="password" class="form-control" required="required" minlength="7">
            </div>

            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>

{% endblock %}